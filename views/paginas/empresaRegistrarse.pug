//-- Contenido de la Sección Registrarse como Empresa del Comercio Electrónico MAD Services.
extends ../base.pug

block title
    title='MAD Services: Registrarse como Empresa'

block body
    div.fondoRegistrarseEmpresa
        div.registrarse
            h1='Darse de alta como Empresa:'
            img.madservicestipologo(src='/images/madforcompanies.png' alt='madforcompaniesLOGO')
            form.formRegistro(method="POST" action='/')
                label='Nombre de la Empresa: '
                    span
                    input.camposRegistro#posicionNombreSoc(type='text' placeholder='Introduce el nombre de la Empresa....')
                br
                br
                label='Tipo de empresa: '
                    span.tipoEmpresa
                        input(type='radio' name='tipoEmpresa' value='PYME')
                        label='PYME'
                        input(type='radio' name='tipoEmpresa' value='Multinacional')
                        label='Multinacional'
                        input(type='radio' name='tipoEmpresa' value='StartUp' checked)
                        label='StartUp'
                br
                br
                label='Código CIF/NIF: '
                    span
                    input.camposRegistro#posicionCIF(type='text' placeholder='Introduce el Código CIF/NIF....')
                br
                br
                label='E-mail: '
                    span
                    input.camposRegistro#posicionEmailCo(type='email' placeholder='Introduce un correo electrónico válido....')
                br
                br
                label='Nueva contraseña: '
                    span
                    input.camposRegistro#posicionPsswd(type='password' placeholder='Introduce una contraseña válida....'
                            pattern="[A-Za-z][A-Za-z0-9]*[0-9][A-Za-z0-9]*"
                            title="La contraseña debe estar compuesta de mínimo 15 caracteres, letras minúsculas y mayúsculas y, de números." required)
                br
                br
                label='Confirmación de la contraseña: '
                    span
                    input.camposRegistro(type='password' placeholder='Introduce una contraseña válida....'
                            pattern="[A-Za-z][A-Za-z0-9]*[0-9][A-Za-z0-9]*"
                            title="La contraseña debe estar compuesta de mínimo 15 caracteres, letras minúsculas y mayúsculas y, de números." required)
                br
                br
                button.posAlta#btnAlta(type='submit')='Darse de alta'
            ul 
                li.botonesSalientes
                    form(method='GET' action='/')
                        button#btnAinicio
                            img.posdeinicio#iconAinicio(src='/icons/home.png' alt='home')
                li.botonesSalientes
                    form(method='GET' action='/registrarse')
                        button.posAtras#btnBack
                            img.posdeAtras#iconBack(src='/icons/back.png' alt='back')