//-- Contenido de la Interfaz de las Empresas del Comercio Electrónico MAD Services.
extends ../../base.pug

block title
  title=`MAD Services: Sesión ${id}`

block body
    include ./componentes/cabecera.pug
    .interfazEmpresa
        br
        header
            if tipo === 'PELUQUERIA'
                img(src='/images/encabezadoPeluq.png' alt='encabezadoPeluq')
            else if tipo === 'RESTAURANTE'
                img(src='/images/encabezadoRestaurante.jpg' alt='encabezadoRestaurante')
            else if tipo === 'VENTAS'
                img(src='/images/encabezadoVentas.png' alt='encabezadoVentas')
            h1=`${tipo} ${marca}:`
        div.row
            div.column
                h3='Descripción: '
                if descripcion
                    p=descripcion
            div.column
                h3='Datos de la Empresa: '
                div.subcolumn
                    if id
                        label='El identificador/ID oficial: ' + id
                    br
                    br
                    if marca
                        label='Nombre de la empresa: ' + marca
                    br
                    br
                    if tipo
                        label='Tipo de empresa: ' + tipo
                    br
                    br
                    if nif
                        label='Código CIF/NIF: ' + nif
                    br
                    br
                    if email
                        label='E-mail: ' + email
                    br
                    br
                    if password
                        label='Contraseña: '
                        input(type='text', name='password', value=password, readonly)
            div.column
                h3='Iconos Web:'
                img.imgIcono(src="/images/whatsapp.png", alt="whatsapp")
                if whatsapp !== 0
                    p#numWhatsapp=whatsapp
                if instagram !== 0
                    a(href=instagram target="_blank")
                        img.imgIcono(src="/images/instagram.png", alt="instagram")
                else
                    img.imgIcono(src="/images/instagram.png", alt="instagram")
                if twitter !== 0
                    a(href=twitter target="_blank")
                        img.imgIcono(src="/images/twitter.png", alt="twitter")
                else
                    img.imgIcono(src="/images/twitter.png", alt="twitter")
                if pagweb !== 0
                    a(href=pagweb target="_blank")
                        img.imgIcono(src="/images/pageWeb.png", alt="pageWeb")
                else 
                    img.imgIcono(src="/images/pageWeb.png", alt="pageWeb")
        div.row
            div.column
                h3='Actualización de los datos de la empresa: '
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/actualizar-marca`)
                    input(type='hidden' name='_method' value='PATCH')
                    label='Nombre de la Empresa: '
                    input(type='text' name='marca' placeholder='Introduce el nombre de la Empresa....')
                    button(type='submit')
                        i.fa-solid.fa-square-pen.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/actualizar-tipo`)
                    input(type='hidden' name='_method' value='PATCH')
                    label='Tipo de empresa: '
                        select(name='tipo')
                            option(checked)=''
                            option='RESTAURANTE'
                            option='ACADEMIA'
                            option='COMERCIO'
                            option='PELUQUERIA'
                    button(type='submit')
                        i.fa-solid.fa-square-pen.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/actualizar-nif`)
                    input(type='hidden' name='_method' value='PATCH')
                    label='Código CIF/NIF: '
                    input(type='text' name='nif' placeholder='Introduce el Código CIF/NIF válido....')
                    button(type='submit')
                        i.fa-solid.fa-square-pen.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/actualizar-email`)
                    input(type='hidden' name='_method' value='PATCH')
                    label='E-mail: '
                    input(type='email' name='email' placeholder='Introduce un correo electrónico válido....')
                    button(type='submit')
                        i.fa-solid.fa-square-pen.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/actualizar-password`)
                    input(type='hidden' name='_method' value='PATCH')
                    label='Antigua contraseña: '
                    input(type='password' name='oldpassword' placeholder='Introduce una contraseña válida....')
                    br
                    br
                    br
                    label='Nueva contraseña: '
                    input(type='password' name='newpassword' placeholder='Introduce una contraseña válida....')
                    br
                    br
                    br
                    label='Repite la contraseña: '
                    input(type='password' name='repitePassword' placeholder='Introduce una Contraseña válida....')
                    button(type='submit')
                        i.fa-solid.fa-square-pen.fa-2xl
            div.column
                h3='Añadir descripción: '
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/add-descripcion`)
                    textarea(name="descripCo", cols="45", rows="10" placeholder='Introduce una descripción para tu interfaz empresarial....')
                    button(type='submit')
                        i.fa-solid.fa-floppy-disk.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/borrar-descripcion`)
                    button(type='submit')
                        i.fa-solid.fa-eraser.fa-2xl
            div.column
                h3='Añadir URLs de contacto: '
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/add-url-WhatsApp`)
                    label='WhatsApp empresarial: '
                    input(type='number' name='whatsapp' placeholder='Introduce el WhatsApp de la empresa....')
                    button(type='submit')
                        i.fa-solid.fa-floppy-disk.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/borrar-url-WhatsApp`)
                    button(type='submit')
                        i.fa-solid.fa-eraser.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/add-url-Instagram`)
                    label='Usuario Instagram: '
                    input(type='text' name='urlInstagram' placeholder='Introduce el Usuario de Instagram de la empresa....')
                    button(type='submit')
                        i.fa-solid.fa-floppy-disk.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/borrar-url-Instagram`)
                    button(type='submit')
                        i.fa-solid.fa-eraser.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/add-url-Twitter`)
                    label='Usuario Twitter: '
                    br
                    input(type='text' name='urlTwitter' placeholder='Introduce el Usuario de Twitter de la empresa....')
                    button(type='submit')
                        i.fa-solid.fa-floppy-disk.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/borrar-url-Twitter`)
                    button(type='submit')
                        i.fa-solid.fa-eraser.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/add-url-PagWeb`)
                    label='URL Página Web: '
                    br
                    input(type='text' name='urlPagWeb' placeholder='Introduce la URL de la Web de la empresa....')
                    button(type='submit')
                        i.fa-solid.fa-floppy-disk.fa-2xl
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/borrar-url-PagWeb`)
                    button(type='submit')
                        i.fa-solid.fa-eraser.fa-2xl
        div.row
            div.column
            div.column
                h3='Darse de baja de MAD Services: '
                form(method='POST' action=`/sesion-empresa/${id}/interfaz/darse-baja`)
                    input(type='hidden' name='_method' value='DELETE')
                    label='¿Confirmas que quieres darte de baja de MAD Services?: '
                    select(name="confirmarOpcion")
                        option(checked)=''
                        option='Sí'
                        option='No' 
                    button(type='submit')='Confirmo'
            div.column
        div.row
            div.column
            div.column
                if tipo === 'PELUQUERIA'
                    h3=`Plano ${tipo}: `
                    img.imgPlano(src='/images/planoPeluqueria.jpg' alt='planoPeluqueria')
                else if tipo === 'RESTAURANTE'
                    h3=`Plano ${tipo}: `
                    img.imgPlano(src='/images/planoRestaurante.jpg' alt='planoRestaurante')
                else if tipo === 'VENTAS'
                    h3='Ingreso de producto para su venta: '
                    form(method='POST' action=`/sesion-miembro/${id}/interfaz/nuevo-producto` enctype="multipart/form-data")
                        label='Imagen de portada: '
                        input.inputMiembroMAD(type='file' name='portada' accept="image/*")
                        br
                        br
                        label='Cantidad: '
                        input.inputMiembroMAD(type="number" name='cantidad' placeholder='Cantidad de productos....')
                        br
                        br
                        label='Tipo de producto:'
                        select(name="categoria")='Categorias'
                            option(checked)=''
                            optgroup(label='Libros')
                                option='Libros infantiles' 
                                option='Libros juveniles'
                                option='Libros de historia'
                                option='Libros de naturaleza'
                                option='Libros de economía'
                                option='Libros escolares'
                                option='Libros de misterio'
                            optgroup(label='Juegos')
                                option='Juegos de mesa'
                                option='Juegos de calle'
                                option='Videojuegos'    
                            optgroup(label='Electrónica e Informática')
                                option='Consolas'
                                option='Altavoces'
                                option='Ratones'
                                option='Teclados'
                                option='PCs'
                                option='MACs'
                                option='Portátiles'
                                option='MacBooks'
                        br
                        br
                        label='Título:'
                        input.inputMiembroMAD(type="text" name='titulo' placeholder='Ponle un título....')
                        br
                        br
                        label='Precio:'
                        input.inputMiembroMAD(type="number" step="any" name='precio' placeholder='Precio del producto....')
                        span#euros='€'
                        br
                        br
                        label='Peso (para el envío):'
                        select(name="peso")
                            option(checked)=''
                            option='Hasta 2'
                            option='Hasta 5'
                            option='Hasta 7'
                            option='Hasta 10'
                            option='Hasta 15'
                            option='> 15'
                        span#euros='Kg'
                        br
                        br
                        label='Descripción:'
                        textarea(rows="10" cols="50" name='descripcion' placeholder='Describe el producto....')
                        button#btnIngresarProductoMAD(type='submit')='Ingresar'
            div.column
        br
    include ./componentes/piepagina.pug