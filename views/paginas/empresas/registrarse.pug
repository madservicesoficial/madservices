//-- Contenido de la Sección Registrarse como Empresa del Comercio Electrónico MAD Services.
extends ../../base.pug

block title
    title='MAD Services: Registrarse como Empresa'

block body
    div.fondoRegistrarseEmpresa
        div.registrarse
            h1='Darse de alta como Empresa:'
            img.madservicestipologo(src='/images/madforcompanies.png' alt='madforcompaniesLOGO')
            //-- Contenido de las alertas.
            if mensaje
                p.alerta#enRojo=mensaje
            h3='Configuración del EBITDA: '
            form(method='POST' action='/registrarse/empresa/ebitda')
                label='Ingresos: '
                input.camposRegistro(type='number' step="any" name='ingresos' placeholder='Los ingresos de tu empresa....')
                label=' €/mes'
                br
                br
                label='Costes: '
                input.camposRegistro(type='number' step="any" name='costes' placeholder='Los costes de tu empresa....')
                label=' €/mes'
                br
                br
                label='Gastos de operaciones: '
                input.camposRegistro(type='number' step="any" name='gastos' placeholder='Los gastos de operaciones de tu empresa....')
                label=' €/mes'
                br
                br
                label='Depreciación: '
                input.camposRegistro(type='number' step="any" name='depreciacion' placeholder='La depreciación de tu empresa....')
                label=' %/mes'
                br
                br
                label='Amortización: '
                input.camposRegistro(type='number' step="any" name='amortizacion' placeholder='La amortización de tu empresa....')
                label=' %/mes'
                br
                br
                button#btnVerCuota(type='submit')='Ver cuota'
            if cuotaMAD
                label#verCuota='Tu cuota MAD a pagar: ' + cuotaMAD + '€/mes'
            br
            br
            h3='Datos del Registro: '
            form.formRegistro(method="POST" action='/registrarse/empresa')
                label='Nombre de la Empresa: '
                input.camposRegistro#posicionNombreSoc(type='text' name='marca' placeholder='Introduce el nombre de la Empresa....')
                br
                br
                label='Tipo de empresa: '
                    select.tipoEmpresa(name='tipo')
                        option(checked)=''
                        option='RESTAURANTE'
                        option='EDUCACION'
                        option='VENTAS'
                        option='PELUQUERIA'
                        option='VIAJES'
                        option='IPTV'
                br
                br
                label='Código CIF/NIF: '
                input.camposRegistro#posicionCIF(type='text' name='nif' placeholder='Introduce el Código CIF/NIF válido....')
                br
                br
                label='E-mail: '
                input.camposRegistro#posicionEmailCo(type='email' name='email' placeholder='Introduce un correo electrónico válido....')
                br
                br
                label='Nueva contraseña: '
                input.camposRegistro#posicionPsswd(type='password' name='password' placeholder='Introduce una contraseña válida....')
                br
                br
                label='Confirmación de la contraseña: '
                input.camposRegistro(type='password' name='confirmPassword' placeholder='Introduce una contraseña válida....')
                br
                br
                label='IBAN: '
                input.camposRegistro#posIBAN(type='text' name='iban' placeholder='Introduce un IBAN válido....')
                br
                br
                button.posAlta#btnAlta(type='submit')='Darse de alta'
            ul 
                li.botonesSalientes
                    form(method='GET' action='/')
                        button.dosbtnRegistro
                            i.fa-solid.fa-house.fa-2xl#iconosRegister
                li.botonesSalientes
                    form(method='GET' action='/registrarse')
                        button.dosbtnRegistro#btnBackRegister
                            i.fa-solid.fa-circle-left.fa-2xl#iconosRegister
            ul.otrosbtnLogin
                li 
                    form(method='GET' action='/login/empresa')
                        button.btnSinCuenta='¡Ya tengo cuenta!'