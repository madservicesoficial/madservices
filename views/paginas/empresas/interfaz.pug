//-- Contenido de la Interfaz de las Empresas del Comercio Electrónico MAD Services.
extends ../../base.pug

block title
  title=`MAD Services: Sesión ${id}`

block body
    include ./componentes/cabecera.pug
    div.perfilEmpresa
        br
        h1.tituloPerfil=`Interfaz de ${tipo} ${marca}:`
        div#perfilEmpresaIzquierda
            h3='Actualización de campos: '
            //-- Contenido de las alertas.
            if msjError
                p.alertaAct#enRojo=msjError
            if msjError1
                p.alertaAct#enRojo=msjError1
            if msjActualizacion
                p.alertaAct#enVerde=msjActualizacion
            form(method='POST' action=`/sesion-empresa/${id}/interfaz/actualizar`)
                input(type='hidden' name='_method' value='PATCH')
                label='Nombre de la Empresa: '
                input.camposRegistro#posicionMarcaCo(type='text' name='marca' placeholder='Introduce el nombre de la Empresa....')
                br
                br
                br
                label#posEtiqTipoCo='Tipo de empresa: '
                    select.tipoEmpresa#posTipoCo(name='tipo')
                        option(checked)=''
                        option='RESTAURANTE'
                        option='EDUCACION'
                        option='VENTAS'
                        option='PELUQUERIA'
                        option='VIAJES'
                        option='CINE'
                        option='TEATRO'
                        option='IPTV'
                br
                br
                br
                label#posactualizEmpresa='Código CIF/NIF: '
                input.camposRegistro#posactualizEmpresa(type='text' name='nif' placeholder='Introduce el Código CIF/NIF válido....')
                br
                br
                br
                label#posactualizEmpresa='Indicador EBITDA: '
                input.camposRegistro#posactualizEmpresa(type='number' name='ebitda' placeholder='Introduce el indicador EBITDA válido....')
                br
                br
                br
                label#posactualizEmpresa='E-mail: '
                input.entradasNoRadio#posactualizEmpresa(type='email' name='email' placeholder='Introduce un correo electrónico válido....')
                br
                br
                br
                label#posactualizEmpresa='Antigua contraseña: '
                input.entradasNoRadio#posactualizEmpresa(type='password' name='oldpassword' placeholder='Introduce una contraseña válida....')
                br
                br
                br
                label#posactualizEmpresa='Nueva contraseña: '
                input.entradasNoRadio#posactualizEmpresa(type='password' name='newpassword' placeholder='Introduce una contraseña válida....')
                br
                br
                br
                label#posactualizEmpresa='Repite la contraseña: '
                input.entradasNoRadio#posactualizEmpresa(type='password' name='repitePassword' placeholder='Introduce una Contraseña válida....')
                br
                br
                br
                button#btnActualizarEmpresa(type='submit')='Actualizar'
        div#perfilEmpresaDerecha
            h3=`Información sobre ${tipo} ${marca}: `
            ul 
                li.mostrarPerfilCliente
                    if id
                        label='El identificador/ID oficial: ' + id
                        br
                        br
                    if marca
                        label='Nombre de la empresa: ' + marca
                        br
                        br
                    if tipo
                        label='Tipo de empresa: ' + tipo
                        br
                        br
                    if nif
                        label='Código CIF/NIF: ' + nif
                        br
                        br
                    if ebitda
                        label='Indicador EBITDA: ' + ebitda
                        br
                        br
                    if email
                        label='E-mail: ' + email
                        br
                        br
                    if password
                        label='Contraseña: '
                        span(hidden)=password
                        span='(oculta).'
        div#perfilEmpresaDerecha2
            h3='Darse de baja de MAD Services: '
            if msjError2
                p.alertaAct#enRojo=msjError2
            if msjBaja
                p.alertaAct#enVerde=msjBaja
            form(method='POST' action=`/sesion-empresa/${id}/interfaz/darse-baja`)
                input(type='hidden' name='_method' value='DELETE')
                label='¿Confirmas que quieres darte de baja de MAD Services?: '
                br
                label.ConfirmarBaja#siConfirmar='Sí'
                input.ConfirmarBaja(name="siConfirmar" type="checkbox")
                label.ConfirmarBaja='No'
                input.ConfirmarBaja(name="noConfirmar" type="checkbox")
                button#btnDarseBajaEmpresa(type='submit')='Confirmo'
        div#perfilEmpresaAbajo
            h3='Ingreso de productos para su venta: '
    include ./componentes/piepagina.pug