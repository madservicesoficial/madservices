//-- Contenido de la Sección Productos MAD del Comercio Electrónico MAD Services.
extends ../../base.pug

block title
    title='MAD Services y sus productos'

block body
    include ./componentes/cabecera.pug
    .interfazProductosMAD
        br
        header
            img(src='/images/anuncio.png' alt='anuncio')
        div.row
            div.columnIzq
                h3='Búsqueda a medida'
                p='Por nombre del producto:'
                form(method='POST' action='/empieza/productosmadservices/busqueda-titulo')
                    input(type='text' name='titulo' placeholder='Buscar por título....')
                    button(type='submit')='Buscar'
                p='Por tipo de producto:'
                form(method='POST' action='/empieza/productosmadservices/busqueda-categoria')
                    select#filtroTipoProducto(name="categoria")='Categorias'
                        option(checked)='Todo'
                        optgroup(label='Libros')
                            option='Libros infantiles' 
                            option='Libros juveniles'
                            option='Libros de historia'
                            option='Libros de naturaleza'
                            option='Libros de economía'
                            option='Libros escolares'
                            option='Libros de misterio'
                        optgroup(label='Juegos')
                            option='Juegos de mesa'
                            option='Juegos de calle'
                            option='Videojuegos'    
                        optgroup(label='Electrónica e Informática')
                            option='Consolas'
                            option='Altavoces'
                            option='Ratones'
                            option='Teclados'
                            option='PCs'
                            option='MACs'
                            option='Portátiles'
                            option='MacBooks'
                    button(type='submit')='Buscar'
                p='Por precio del producto:'
                form(method='POST' action='/empieza/productosmadservices/busqueda-precio')
                    .filtroRangoPrecio
                        input(type="radio" name="busquedaPorPrecio" value='0' checked)
                        label='0 a 10€'
                        br
                        input(type="radio" name="busquedaPorPrecio" value='10')
                        label='10 a 20€'
                        br
                        input(type="radio" name="busquedaPorPrecio" value='20')
                        label='20 a 30€'
                        br
                        input(type="radio" name="busquedaPorPrecio" value='30')
                        label='30 a 40€'
                        br
                        input(type="radio" name="busquedaPorPrecio" value='40')
                        label='40 a 50€'
                        br
                        input(type="radio" name="busquedaPorPrecio" value='50')
                        label='50 a 60€'
                        br
                        input(type="radio" name="busquedaPorPrecio" value='60')
                        label='60 a 70€'
                        br
                        input(type="radio" name="busquedaPorPrecio" value='70')
                        label='70 a 80€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='80 a 90€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='90 a 100€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='100 a 125€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='125 a 150€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='150 a 175€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='175 a 200€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='200 a 250€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='250 a 300€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='300 a 350€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='350 a 400€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='400 a 450€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='450 a 500€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='500 a 600€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='600 a 700€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='700 a 800€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='800 a 900€'
                        br
                        input(type="radio" name="busquedaPorPrecio")
                        label='900 a 1000€'
                        br
                    button(type='submit')='Buscar'
            div.columnDer
                each campo in cartaProducto
                    form(method='GET' action='/registrarse/cliente')
                        div.tarjetaProductosMAD
                            h3=campo.titulo
                            img(src=`data:image/*;base64,${campo.portada}`)
                            if campo.cantidad === 1
                                h3=campo.cantidad + ' unidad queda'
                            else 
                                h3=campo.cantidad + ' unidades quedan'
                            h3=campo.precio + '€'
                            button(type='submit')='Añadir al carrito'
        br
    include ./componentes/piepagina.pug