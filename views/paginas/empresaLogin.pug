//-- Contenido de la Sección Iniciar Sesión como Empresa del Comercio Electrónico MAD Services.
extends ../base.pug

block title
    title='MAD Services: Iniciar Sesión como Empresa'

block body
    h1.etiquetaLogin#Empresa='Empresa'
    div.login
        h1='INICIAR SESIÓN:'
        img.madservicesLOGO(src='/images/madforcompanies.png' alt='madforcompanies')
        form(method='POST' action='/login/empresa')
            label.entradas#espaciadoEtiqueta(for="inputEmail")='Correo Electrónico:'
            input.entradas#rellenoLogin(type='email' name='email' placeholder='Correo Electrónico....')
            label.entradas#espaciadoEtiqueta(for="inputPassword")='Contraseña:'
            input.entradas#rellenoLogin(type='password' name='password' placeholder='Contraseña....')
            button#btnAcceso(type='submit')='Acceder'
        ul.otrosbtnLogin
            li
                ul
                    li.dosbtnLogin
                        form(method='GET' action='/login')
                            button.btnBackHome
                                img.icon(src='/icons/back.png' alt='back')
                    li.dosbtnLogin
                        form(method='GET' action='/')
                            button.btnBackHome#posBtnHome
                                img.icon(src='/icons/home.png' alt='home')
            li
                form(method='GET' action='/registrarse/empresa')
                    button.btnSinCuenta='¡No tengo cuenta!'