//-- Contenido de la Sección Categorias Autenticado del Cliente del Comercio Electrónico MAD Services.
extends ../base.pug

block title
    title=`MAD Services: ${id} en Categorias`

block body
    include ../componentes/cabeceraAuthCliente.pug
    div.categoriasSeccion
        form(method='GET' action=`/sesion-cliente/${id}/categorias/productosMAD`)
            div.categoria#productosMAD='Productos MAD'
                canvas#marcaMAD
                img#imgMAD(src='/images/madservices.png' alt='madservices')
        form(method='GET' action=`/sesion-cliente/${id}/categorias/mall`)
            div.categoria#restoMarcas='Resto de marcas'
                canvas#multiMarca
                img#imgMulti(src='/images/multimarca.png' alt='multimarca')
    include ../componentes/piepaginaAuthCliente.pug