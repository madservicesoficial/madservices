//-- Contenido del Componente Cabecera Autenticada del Comercio Electrónico MAD Services.
div#cabecera
  ul.nav
    li
      form(method='GET' action='/:id')
        button.btnMADServices
          img.logoMADServices(src='/images/madservices.png' alt='madservices')
    li.menu
      input(type='search' maxlength='50' placeholder='Busca el producto/servicio')
      button(type='submit')='Buscar'
    li.menu
      form(method='GET' action='/:id/perfil')
        button.btnOculto='Mi Perfil'
    li.menu
      form(method='GET' action='/:id/cerrar-sesion')
        button.btnOculto='Cerrar sesión'
    li.menu#menuIcono
      form.despliegue(method='GET' action='#')
        button.btnCarrito
            i.fa-solid.fa-cart-arrow-down.fa-2xl#iconosCab
    li.menuIdiomas
      i.fa-solid.fa-earth-americas.fa-2xl#iconosCab
      select.eligeIdiomas(name="Idiomas")
        option(value="value1" selected)='Español'
        option(value="value2")='Inglés'