html(lang="es")
  //-- Pestaña del Navegador del Comercio Electrónico.
  head
    //-- Codificación del Comercio Electrónico.
    meta(charset="utf-8")
    //-- Configuración del Favicon genérico del Comercio Electrónico.
    link(rel="icon" sizes='16x16 32x32 48x48 64x64' href="/favicon.ico")
    //-- Configuración y ajustes generales del Comercio Electrónico.
    meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, minimum-scale=1.0")
    //-- Configuración de la descripción del Comercio Electrónico.
    meta(name="description" content="El E-Commerce de los E-Commerces")
    //-- Configuración de las fuentes de escritura del Comercio Electrónico.
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;900&display=swap" rel="stylesheet")
    link(rel='stylesheet' href='/stylesheets/style.css')
    //-- Título de la Pestaña del Navegador del Comercio Electrónico.
    block title
  body
    block body