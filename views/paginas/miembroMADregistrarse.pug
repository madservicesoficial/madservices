//-- Contenido de la Sección Registrarse como Miembro MAD del Comercio Electrónico MAD Services.
extends ../base.pug

block title
    title='MAD Services: Registrar miembros MAD'

block body
    div.fondoRegistrarseMiembroMAD
        div.registrarse
            h1='Darse de alta como Miembro MAD:'
            img.madservicestipologo(src='/images/madservices.png' alt='madservices')
            //-- Contenido de las alertas.
            if mensaje
                p.alerta#enRojo=mensaje
            form.formRegistro(method="POST" action='/registrarse/miembroMAD')
                label='Nombre: '
                input.camposRegistro#posicionNombreMiembro(type='text' name='nombreMiembro' placeholder='Introduce el nombre de la Empresa....')
                br
                br
                label='Apellidos: '
                    span
                        input.camposRegistro#posicionApellidos(type='text' name='apellidosMiembro' placeholder='Escribe tus dos apellidos....')
                br
                br
                label='Género: '
                    span.genero
                        input(type='radio' name='generoMiembro' value='Hombre')
                        label='Hombre'
                        input(type='radio' name='generoMiembro' value='Mujer')
                        label='Mujer'
                        input(type='radio' name='generoMiembro' value='Otro' checked)
                        label='Otro'
                br
                br
                label='E-mail: '
                input.camposRegistro#posicionEmailCo(type='email' name='emailMiembro' placeholder='Introduce un correo electrónico válido....')
                br
                br
                label='Nueva contraseña: '
                input.camposRegistro#posicionPsswd(type='password' name='passwordMiembro' placeholder='Introduce una contraseña válida....')
                br
                br
                label='Confirmación de la contraseña: '
                input.camposRegistro(type='password' name='confirmPasswordMiembro' placeholder='Introduce una contraseña válida....')
                br
                br
                button.posAlta#btnAlta(type='submit')='Darse de alta'
            ul 
                li.botonesSalientes
                    form(method='GET' action='/')
                        button.dosbtnRegistro
                            i.fa-solid.fa-house.fa-2xl#iconosRegister
                li.botonesSalientes
                    form(method='GET' action='/registrarse')
                        button.dosbtnRegistro#btnBackRegister
                            i.fa-solid.fa-circle-left.fa-2xl#iconosRegister
            ul.otrosbtnLogin
                li 
                    form(method='GET' action='/login/miembroMAD')
                        button.btnSinCuenta='¡Ya tengo cuenta!'