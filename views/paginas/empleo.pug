//-- Contenido de la Sección Trabaja con Nosotros del Comercio Electrónico MAD Services.
extends ../base.pug

block title
  title='MAD Services: Trabaja con nosotros'

block body
  include ../componentes/cabecera.pug
  div.empleo
    div.elementosEmpleo
      ul
        li
          img.imagenEmpleo(src='/images/empleo.jpg' alt='empleo')
        li
          h1.tituloEmpleo='¡Envíanos tu CV!'
      form.datosEmpleo(method='POST' action='/empleo')
        label='Nombre: '
          span
            input(type='text')
        br
        br
        label='Apellidos: '
          span
            input(type='text')
        br
        br
        label='Email: '
          span
            input(type='email')
        br
        br
        label='Fecha de nacimiento: '
          span
            input(type='date')
        br
        br
        label='CV: '
          span
            input(type="file" accept=".pdf")
        br
        br
        label='Títulos/Certificados: '
          span
            input(type="file" accept=".pdf" multiple)
        br
        br
        label='Móvil: '
          span
            input(type="number")
        br
        br
        label='Asunto: '
          span
            input(type='text' maxLength='60')
        br
        br
        label='Mensaje: '
          span
            textarea(rows="10" cols="40" spellcheck='true')
        br
        br
        button(type='submit')='Enviar'
  include ../componentes/piepagina.pug