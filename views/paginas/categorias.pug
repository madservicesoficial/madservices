//-- Contenido de la Sección Categorias del Comercio Electrónico MAD Services.
extends ../base.pug

block title
    title='MAD Services: Categorias'

block body
    include ../componentes/cabecera.pug
    div.categoriasSeccion
        div.categoria#productosMAD='Productos MAD'
            form(method='GET' action='/categorias/productosMAD')
                canvas#marcaMAD
                img#imgMAD(src='/images/madservices.png' alt='madservices')
                button.btnCanvas 
        div.categoria#restoMarcas='Resto de marcas'
            form(method='GET' action='/categorias/mall')
                canvas#multiMarca
                img#imgMulti(src='/images/multimarca.png' alt='multimarca')
                button.btnCanvas
    include ../componentes/piepagina.pug