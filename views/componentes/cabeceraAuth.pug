//-- Contenido del Componente Cabecera con Inicio de Sesión del Comercio Electrónico MAD Services.
header
  form(method='GET' action='/')
    button.btnMADServices
      img.logoMADServices(src='/images/madservices.png' alt='madservices')
  ul
    li.organizacionCabecera#buscarCabecera
      input(type='search' maxlength='50' placeholder='Busca el producto/servicio')
      button(type='submit')='Buscar'
    li.organizacionCabecera#Auth
      form(method='GET' action='/perfil')
        button.btnAuth='Mi Perfil'
    li.organizacionCabecera#Auth
      form(method='GET' action='/carrito')
        button.btnAuth='Carrito'
    li.organizacionCabecera#Auth
      form(method='GET' action='/cerrar-sesion')
        button#btnLogout
          img#iconoLogout(src='/icons/logout.png' alt='logout')
    li.organizacionCabecera#AuthIdiomas
      img#iconoWorld(src='/icons/world.png' alt='world')
      select.eligeIdiomas(name="Idiomas")
        option(value="value1" selected)='Español'
        option(value="value2")='Inglés'