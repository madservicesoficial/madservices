//-- Contenido de la Sección Iniciar Sesión como Cliente del Comercio Electrónico MAD Services.
extends ../base.pug

block title
    title='MAD Services: Iniciar Sesión como Cliente'

block body
    h1.etiquetaLogin#Cliente='Cliente'
    div.login
        h1='INICIAR SESIÓN:'
        img.madservicesLOGO(src='/images/madforclients.png' alt='madforclients')
        //-- Contenido de las alertas.
        if mensaje
            p.alerta=`${mensaje}`
        form(method='POST' action='/login/cliente')
            label.entradas#espaciadoEtiqueta(for="email")='Correo Electrónico:'
            input.entradas#rellenoLogin(type='email' name='email' placeholder='Correo Electrónico....')
            label.entradas#espaciadoEtiqueta(for="password")='Contraseña:'
            input.entradas#rellenoLogin(type='password' name='password' placeholder='Contraseña....')
            button#btnAcceso(type='submit')='Acceder'
        ul.otrosbtnLogin
            li
                ul
                    li.dosbtnLogin
                        form(method='GET' action='/login')
                            button.btnBackHome
                                img.icon(src='/icons/back.png' alt='back')
                    li.dosbtnLogin
                        form(method='GET' action='/')
                            button.btnBackHome#posBtnHome
                                img.icon(src='/icons/home.png' alt='home')
            li
                form(method='GET' action='/registrarse/cliente')
                    button.btnSinCuenta='¡No tengo cuenta!'